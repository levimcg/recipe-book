{% extends 'layouts/base.njk' %}

{% block main %}
  <div class="post">
    <div class="flow p-top-500 p-bottom-100">      
      <h1>{{ title }}</h1>
      <p>{{ description }}</p>
      <time>{{ date | dateFormatted }}</time>
      {% for tag in tags %}
      <span class="tag">{{ tag }}</span>
      {% endfor %}
    </div>
    <div class="post__content [ flow p-y-400 ]">
      <h2 id="ingredients">
        Ingredients
        <a class="heading-anchor" href="#ingredients">#</a>
      </h2>
      <ul>
        {%- for ingredient in ingredients -%}
        <li>{{ ingredient }}</li>
        {%- endfor -%}
      </ul>
      {{ content | safe }}
    </div>
  </div>
{% endblock %}