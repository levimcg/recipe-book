{
  "name": "recipe-book",
  "version": "2.0.0",
  "description": "Website source for a collection of some of my favorite recipes, as well as some new ones I'm just trying out.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -p -c serve sass:dev",
    "serve": "npx eleventy --serve",
    "sass:dev": "sass --load-path=node_modules src/scss:site/css --watch",
    "sass:build": "sass --load-path=node_modules --style=compressed  src/scss:site/css",
    "eleventy:build": "npx eleventy",
    "build": "npm-run-all -s eleventy:build sass:build",
    "clean": "rm -rf site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/levimcg/recipe-book.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/levimcg/recipe-book/issues"
  },
  "homepage": "https://github.com/levimcg/recipe-book#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^0.8.3",
    "markdown-it": "^12.0.6",
    "markdown-it-anchor": "^7.1.0",
    "modern-css-reset": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.32.11"
  }
}
